<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="l4l_view_split_sale_wizard_order_form" model="ir.ui.view">
        <field name="name">l4l_view_split_sale_wizard_order_form</field>
        <field name="model">leap.sale.order.wizard</field>
        <field name="arch" type="xml">
            <form string="Dividir pedido de venta">
                <sheet>
                    <field name="split_order_line">
                        <tree editable="bottom" create="0">
                            <field name="line_id" column_invisible="1"/>
                            <field name="product_id"/>
                            <field name="quantity"/>
                            <field name="uom"/>
                        </tree>
                    </field>
                </sheet>
                <footer>
                    <button string="Dividir" name="split_sale" type="object" class="btn-primary mx-1"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>