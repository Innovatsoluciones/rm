<odoo>
    <record id="view_sale_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="(//button[@name='action_confirm'])[1]" position="replace">
                <button name="action_confirm" string="Confirmar" type="object" class="btn-primary"/>
            </xpath>
            <xpath expr="(//button[@name='action_confirm'])[1]" position="attributes">
                <attribute name="attrs">{'invisible': [('state', 'in', ['sale', 'completed_sale'])]}</attribute>
            </xpath>
            <xpath expr="(//button[@name='action_confirm'])[2]" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="sales_agent" placeholder="Agente de ventas"/>
                <field name="delivery_time" placeholder="Tiempo de entrega"/>
                <field name="recipient_name" placeholder="Nombre del destinatario"/>
                <field name="project_reference" placeholder="Número de proyecto o requisción"/>
                <field name="general_notes" placeholder="Observaciones generales"/>
            </xpath>
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="origin_sale_order_links" readonly="1"/>
            </xpath>
        </field>
    </record>
    <record id="view_sale_order_tree_decoration_inherit" model="ir.ui.view">
        <field name="name">sale.order.tree.decoration.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree_with_onboarding"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="attributes">
                <attribute name="decoration-success">state in ('sale', 'done', 'partial_sale', 'completed_sale')</attribute>
                <attribute name="decoration-info">state in ('draft', 'sent', 'partial_draft')</attribute>
                <attribute name="widget">badge</attribute>
            </xpath>
        </field>
    </record>
</odoo>
